        private IEnumerable<DoctorModel> RetrieveDoctors()
        {
            IEnumerable<DoctorRoleDTO> list = repo.GetDoctors();
            IEnumerable<DoctorModel> dlist = from c in list
                                             select new DoctorModel
                                             {
                                                 Id = c.Id,
                                                 Name = c.Name,
                                                 Charges = c.Charges,
                                                 PhoneNo = c.PhoneNo,
                                                 DoctorSpecialityId = c.DoctorSpecialityId,
                                                 WardId = c.WardId
                                             };
            return dlist;
        }
